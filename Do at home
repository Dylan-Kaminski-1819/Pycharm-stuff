#Starting the game
def start():
    print("Welcome to mad libs 2.0. Enter information to start the game. ")
    nouninput()


#Gets multiple nouns from user
def nouninput():
    for i in range(6):
        usernoun = input("Please enter a Noun: ")
        nouns.append(usernoun)
    verbinput()


#Gets multiple verbs from user
def verbinput():
    for i in range(4):
     print("Please enter a Verb")

#Gets multiple adjectives from user
def adjinput():
    for i in range(3):
     print("Please enter a Adjective")


