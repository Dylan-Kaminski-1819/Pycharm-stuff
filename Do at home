def storyselection():
    storyselection = input("Welcome to my madlibs, Type Funny to begin a funny adventure or type Last Day to start an adventure about the last day of school ")
    if storyselection.lower() == funny:
        funny()
    if storyselection.lower() == lastday:
        lastday()
    elif print("Please input funny story or last day to begin "):


